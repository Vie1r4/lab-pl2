<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculadora" Height="250" Width="250">
    <Grid>
        <Label Content="Valor1:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtValor1" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" Width="150"/>

        <Label Content="Operação:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtOperacao" HorizontalAlignment="Left" Margin="80,40,0,0" VerticalAlignment="Top" Width="40"/>

        <Label Content="Valor2:" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtValor2" HorizontalAlignment="Left" Margin="60,70,0,0" VerticalAlignment="Top" Width="150"/>

        <Button Content="=" HorizontalAlignment="Left" Margin="90,100,0,0" VerticalAlignment="Top" Width="50" Click="BtnCalcular_Click"/>

        <Label Content="Resultado:" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtResultado" HorizontalAlignment="Left" Margin="80,140,0,0" VerticalAlignment="Top" Width="130" IsReadOnly="True"/>
    </Grid>
</Window>
