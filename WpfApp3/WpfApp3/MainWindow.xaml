<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculadora" Height="400" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBox Name="txtResultado" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="50" FontSize="24" TextAlignment="Right" Margin="10" IsReadOnly="True"/>

        <Grid Margin="10,70,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Linha 1 -->
            <Button Grid.Row="0" Grid.Column="0" Content="7" FontSize="20"/>
            <Button Grid.Row="0" Grid.Column="1" Content="8" FontSize="20"/>
            <Button Grid.Row="0" Grid.Column="2" Content="9" FontSize="20"/>
            <Button Grid.Row="0" Grid.Column="3" Content="/" FontSize="20"/>

            <!-- Linha 2 -->
            <Button Grid.Row="1" Grid.Column="0" Content="4" FontSize="20"/>
            <Button Grid.Row="1" Grid.Column="1" Content="5" FontSize="20"/>
            <Button Grid.Row="1" Grid.Column="2" Content="6" FontSize="20"/>
            <Button Grid.Row="1" Grid.Column="3" Content="*" FontSize="20"/>

            <!-- Linha 3 -->
            <Button Grid.Row="2" Grid.Column="0" Content="1" FontSize="20"/>
            <Button Grid.Row="2" Grid.Column="1" Content="2" FontSize="20"/>
            <Button Grid.Row="2" Grid.Column="2" Content="3" FontSize="20"/>
            <Button Grid.Row="2" Grid.Column="3" Content="-" FontSize="20"/>

            <!-- Linha 4 -->
            <Button Grid.Row="3" Grid.Column="0" Content="0" FontSize="20"/>
            <Button Grid.Row="3" Grid.Column="1" Content="C" FontSize="20"/>
            <Button Grid.Row="3" Grid.Column="2" Content="=" FontSize="20"/>
            <Button Grid.Row="3" Grid.Column="3" Content="+" FontSize="20"/>
        </Grid>
    </Grid>
</Window>
